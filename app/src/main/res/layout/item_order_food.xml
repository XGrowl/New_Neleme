<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/order_food_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/food0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_food_name"
        android:layout_toRightOf="@+id/order_food_image"
        android:text="青椒"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="×"
        android:textSize="@dimen/dp_10"
        android:layout_toLeftOf="@id/order_food_number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_centerVertical="true"
        android:textSize="10dp"
        android:id="@+id/order_food_number"
        android:layout_toLeftOf="@id/order_food_price"
        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/order_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="199"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/order_food_price"
       android:layout_alignBottom="@+id/order_food_price"
        android:layout_centerVertical="true"
        android:text="￥"
        android:textSize="8dp" />
</RelativeLayout>